-- Simple UI Library for Roblox
local SimpleUILib = {}
SimpleUILib.__index = SimpleUILib

function SimpleUILib.new(name)
    local self = setmetatable({}, SimpleUILib)

    -- Создаем основное окно
    self.ScreenGui = Instance.new("ScreenGui")
    self.Frame = Instance.new("Frame")
    self.Frame.Size = UDim2.new(0.5, 0, 0.5, 0)
    self.Frame.Position = UDim2.new(0.25, 0, 0.25, 0)
    self.Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    self.Frame.Parent = self.ScreenGui

    self.Title = Instance.new("TextLabel")
    self.Title.Size = UDim2.new(1, 0, 0.1, 0)
    self.Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    self.Title.Text = name
    self.Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    self.Title.Parent = self.Frame

    self.TabContainer = Instance.new("Frame")
    self.TabContainer.Size = UDim2.new(1, 0, 0.9, 0)
    self.TabContainer.Position = UDim2.new(0, 0, 0.1, 0)
    self.TabContainer.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    self.TabContainer.Parent = self.Frame

    self.ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    return self
end

function SimpleUILib:AddTab(name)
    local TabButton = Instance.new("TextButton")
    TabButton.Size = UDim2.new(0.1, 0, 0.1, 0)
    TabButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    TabButton.Text = name
    TabButton.Parent = self.TabContainer

    TabButton.MouseButton1Click:Connect(function()
        print(name .. " tab clicked!")
        -- Здесь можно добавить логику для отображения контента вкладки
    end)
end

function SimpleUILib:AddButton(tabName, buttonName, callback)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(0.8, 0, 0.1, 0)
    Button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    Button.Text = buttonName
    Button.Parent = self.TabContainer

    Button.MouseButton1Click:Connect(function()
        callback()
    end)
end

function SimpleUILib:AddTextbox(tabName, textboxName, callback)
    local TextBox = Instance.new("TextBox")
    TextBox.Size = UDim2.new(0.8, 0, 0.1, 0)
    TextBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    TextBox.PlaceholderText = textboxName
    TextBox.Parent = self.TabContainer

    TextBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(TextBox.Text)
        end
    end)
end

return SimpleUILib
