-- RELKIN Library
local RELKINLibrary = {}
RELKINLibrary.__index = RELKINLibrary

local PlayerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")

function RELKINLibrary:new()
    local self = setmetatable({}, RELKINLibrary)
    
    -- Instances
    self.screenGui = Instance.new("ScreenGui")
    self.mainFrame = Instance.new("Frame")
    self.topBar = Instance.new("Frame")
    self.closeButton = Instance.new("ImageButton")
    self.nameLabel = Instance.new("TextLabel")
    self.navgations = Instance.new("ScrollingFrame")
    self.placeHolder = Instance.new("Frame")
    
    -- Setup Properties
    self:setupGui()
    
    return self
end

function RELKINLibrary:setupGui()
    self.screenGui.Name = "RELKIN Library"
    self.screenGui.Parent = PlayerGui
    self.screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    self.screenGui.ResetOnSpawn = false

    -- Main Frame Setup
    self.mainFrame.Name = "Main"
    self.mainFrame.BackgroundColor3 = Color3.fromRGB(67, 67, 67)
    self.mainFrame.Position = UDim2.new(0.373, 0, 0.302, 0)
    self.mainFrame.Size = UDim2.new(0.321, 0, 0.8, 0)
    self.mainFrame.Parent = self.screenGui
    
    -- Top Bar Setup
    self.topBar.Name = "TopBar"
    self.topBar.BackgroundColor3 = Color3.fromRGB(94, 94, 94)
    self.topBar.Size = UDim2.new(1, 0, 0.1, 0)
    self.topBar.Parent = self.mainFrame
    
    -- Close Button Setup
    self.closeButton.Name = "Close"
    self.closeButton.BackgroundTransparency = 1
    self.closeButton.Position = UDim2.new(0.93, 0, 0.1, 0)
    self.closeButton.Size = UDim2.new(0.067, 0, 0.816, 0)
    self.closeButton.Image = "rbxassetid://10747384394"
    self.closeButton.Parent = self.topBar

    -- Name Label Setup
    self.nameLabel.Name = "Name"
    self.nameLabel.Text = "RELKIN"
    self.nameLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    self.nameLabel.Size = UDim2.new(0.608, 0, 1.02, 0)
    self.nameLabel.Parent = self.topBar

    -- Navigation Setup
    self.navgations.Name = "Navgations"
    self.navgations.BackgroundColor3 = Color3.fromRGB(95, 95, 95)
    self.navgations.Size = UDim2.new(0.25, 0, 0.9, 0)
    self.navgations.Position = UDim2.new(0.003, 0, 0.1, 0)
    self.navgations.Parent = self.mainFrame
    
    -- Place Holder Setup
    self.placeHolder.Name = "PlaceHolder"
    self.placeHolder.BackgroundColor3 = Color3.fromRGB(75, 75, 75)
    self.placeHolder.Size = UDim2.new(1, 0, 0.9, 0)
    self.placeHolder.Position = UDim2.new(0, 0, 0.1, 0)
    self.placeHolder.Parent = self.mainFrame

    -- Dragging Functionality
    self:makeDraggable(self.mainFrame)

    -- Close Functionality
    self.closeButton.MouseButton1Click:Connect(function()
        self.screenGui.Visible = false
    end)
end

function RELKINLibrary:makeDraggable(frame)
    local player = game.Players.LocalPlayer
    local mouse = player:GetMouse()
    local dragging = false
    local dragStart = nil
    local startPos = nil

    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position

            input.Changed:Connect(function()
                if input.UserInputState
